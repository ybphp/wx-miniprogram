.item-box{
    padding:30rpx 0 0 0;
    display: flex;
    justify-content:space-evenly;
}
.item-box .item-img{
    margin-right:20rpx;
}
.item-box .item-img image{
    width:260rpx;
    height:200rpx;
}

.item-data-group .item-data-title{
    flex: 1;
    width:100%;
    font-size:34rpx;
    height:50rpx;
    line-height:50rpx;
    margin-top:15rpx;
    font-weight: bold;

    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.item-data-group .item-data-desc{
    font-size:24rpx;
    margin-top:36rpx;
    color: #aaa;
}
.item-data-group .item-data-price{
    margin-top:10rpx;
    font-size:34rpx;
    color:#56bfb3;
}