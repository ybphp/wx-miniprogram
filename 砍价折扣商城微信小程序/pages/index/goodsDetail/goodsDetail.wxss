.container {
  padding-bottom: 100rpx;
}

/*返回按钮*/
.go-back-wrapper {
  position: fixed;
  z-index: 1;
  top: 25px;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #fff;
  padding: 10rpx;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
}
.icon-go-back {
  width: 60rpx;
  height: 60rpx;
}

/*轮播图*/
.swiper-wrapper {
  width: 100%;
  height: 780rpx;
}
/*覆盖image默认宽高*/
.slider-image {
  width: 100%;
  height: 100% !important;
}

/*商品信息*/
.goods-info {
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.goods-info .title {
  font-size: 14px;
  margin-bottom: 10rpx;
}
.goods-info .sub-title {
  color: #999999;
  margin-bottom: 20rpx;
}
.price-wrapper {
  display: flex;
  justify-content: space-between;
}
.price {
  font-size: 14px;
  color: #ed4040;
}
.original-price {
  font-size: 13px;
  color: #999999;
  margin-left: 10rpx;
  text-decoration: line-through;
}
.sold {
  font-size: 12px;
  color: #999999;
}

/*选择规格*/
.select-size {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  padding: 0 20rpx;
  background: #fff;
  margin-top: 20rpx;
  font-size: 12px;
}
.select-size .right_arrow {
  width: 50rpx;
  height: 50rpx;
}

/*配送地址*/
.address {
  width: 100%;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  background: #fff;
  margin-top: 20rpx;
}
.address-detail {
  margin-top: 30rpx;
  display:flex;
  align-items:center;
}
.icon-address {
  width: 35rpx;
  height: 35rpx;
  margin-left: 10rpx;
}

/*服务信息*/
.service-info {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  font-size: 12px;
  color: #707070;
  background: #fff;
  margin-top: 20rpx;
}
.service-item {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.service-item image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 5rpx;
}

/*tab导航*/
.tab-wrapper {
  margin-top: 20rpx;
  height: 100rpx;
  width: 100%;
  background: #fff;
  display: flex;
  justify-content: space-around;
  padding: 0 100rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f8f8f8;
}
.tab-item {
  display: flex;
  align-items: center;
}
.tab-item image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 5rpx;
}

/*口碑精选*/
.comment-wrapper {
  background: #fff;
  width: 100%;
}
.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 20rpx;
}
.look-all {
  color: #5cadff;
  font-size: 12px;
}
/*评论滚动*/
.scroll-wrapper {
  width: 100%;
  height: 240rpx;
  white-space: nowrap;
  overflow:hidden;
  font-size: 12px;
}
.comment-item {
  width: 400rpx;
  height: 200rpx;
  display: inline-block;
  background: #f8f8f8;
  padding: 30rpx ;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  border-left: 20rpx solid #fff;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
}
.comment-item:last-child {
  margin-right: 20rpx;
}
.comment-item .user-info {
  height: 50rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.comment-item .avatar {
  width: 50rpx;
  height: 50rpx;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  margin-right: 10rpx;
}
.comment {
  /*强制换行*/
  white-space: pre-line;
  /*超出两行显示省略号*/
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
