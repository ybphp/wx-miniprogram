/*推荐*/
.recommend-wrapper {
  max-width: 100%;
  background: #fff;
  margin-top: 20rpx;
}
.recommend-header {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  background: #fff;
  border-bottom: 2rpx solid #f8f8f8;
}
.recommend-list {
  max-width: 100%;
  font-size: 12px;
  display: flex;
  /*强制换行*/
  flex-wrap: wrap;
}
.recommend-goods-item {
  width: 33.3%;
  border-right: 2rpx solid #f8f8f8;
  border-bottom: 2rpx solid #f8f8f8;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.recommend-goods-item .goods-img {
  width: 120rpx;
  height: 150rpx;
  margin-bottom: 10rpx;
}
.recommend-goods-item .title {
  /*强制换行*/
  white-space: pre-line;
  /*超出两行显示省略号*/
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.recommend-goods-item .price {
  width: 100%;
  font-size: 14px;
}
.recommend-goods-item .original-price {
  color: #999999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

/*商品详情*/
.detail-wrapper {
  width: 100%;
  margin-top: 20rpx;
}
.detail-tab-header {
  display: flex;
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #f8f8f8;
  background: #fff;
}
.detail-tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
}
.detail-tab-item text {
  height: 100%;
  padding: 0 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.introduce,
.graphic-detail,
.consult-and-after-sales {
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.graphic-detail {
  margin-top: 20rpx;
}

/*到底提示*/
.bottom-tip {
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #707070;
  font-size: 12px;
}

/*底部操作按钮*/
.handle-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 2rpx solid #f8f8f8;
}
.btn-icon {
  width: 100rpx;
  height: 100%;
  border-right: 2rpx solid #f8f8f8;
  display: flex;
  justify-content: center;
  align-items: center;
}
.handle-wrapper image {
  width: 60rpx;
  height: 60rpx;
}
.btn-buy,
.btn-add {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.btn-add {
  background: #ed4040;
  color: #fff;
}