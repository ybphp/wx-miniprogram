/**index.wxss**/
.category{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding:18rpx;
    background-color:#f5f5f5;
}
.category-item{
    position: relative;
    display:flex;
    align-items: center;
    justify-content: center;
    width:100%;
    height:300rpx;
    margin-top:20rpx;
    text-align: center;
    box-shadow: 2px 2px 0px 2px rgba(0,0,0,.1);
    border-radius: 20px;
}

.category-shuzi{
    background: url('http://images-1251567240.cosgz.myqcloud.com/shuzi/shuzi.jpg') no-repeat scroll 50% 50% transparent;
}

.category-shuiguo{
    background: url('http://images-1251567240.cosgz.myqcloud.com/shuiguo/shuiguo.jpg') no-repeat scroll 50% 50% transparent;
}

.category-dongwu{
    background: url('http://images-1251567240.cosgz.myqcloud.com/dongwu/dongwu.jpg') no-repeat scroll 50% 0 transparent;
}

.category-shentibuwei{
    background: url('http://images-1251567240.cosgz.myqcloud.com/qiguan/shentibuwei.jpg') no-repeat scroll 50% 0 transparent;
}

.category-item-name{
    display:inline-block;
    height:90rpx;
    padding:0 20rpx;
    line-height: 90rpx;
    font-size:40rpx;
    color:#fff;
    background-color:rgba(0,0,0,.3);
}
.category-item-circle{
    position: absolute;
    top:10px;
    left:10px;
    width:20rpx;
    height:20rpx;
    background-color:#fff;
    border-radius: 100%;
}
.icon-dibudaohanglan_fangzi_tiaozhuanzhuye:before { content: "\e628"; }