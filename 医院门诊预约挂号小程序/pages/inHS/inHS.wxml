<view class='panel-m20'>
  <view class="personInfoTop {{show}}">
    <i-button bindtap="goAddPanson">初次使用，请添加住院人</i-button>
  </view>
  <view class="serverWrapper">
    <view class="serverTitle">住院服务</view>
    <i-grid>
      <i-grid-item bindtap="goAddPanson">
        <i-grid-icon>
          <image src="../../images/addMan.png" />
        </i-grid-icon>
        <i-grid-label>添加住院人</i-grid-label>
      </i-grid-item>
      <i-grid-item data-type="4" bindtap="depositLog">
        <i-grid-icon>
          <image src="../../images/talk.png" />
        </i-grid-icon>
        <i-grid-label>押金补缴记录</i-grid-label>
      </i-grid-item>
      <i-grid-item bindtap="report">
        <i-grid-icon>
          <image src="../../images/bill.png" />
        </i-grid-icon>
        <i-grid-label>住院报告</i-grid-label>
      </i-grid-item>
    </i-grid>
  </view>
</view>