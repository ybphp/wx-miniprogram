/* pages/reserve/reserve.wxss */
@import '../component/calendar/calendar/index.wxss';
.list-with-graphic{
  width: 100%;
  height: 82px;
  padding:10px 0;
  border-top: solid 1px #d7dcdb;
}
.list-part-left{
  float: left;
}
.list-part-left{
  width: 80px;
  height: 80px;
  overflow: hidden;
  border-radius: 7px;
  margin-left: 10px;
  margin-right: 20px;
  border: solid 1px #d7dcdb;
}
.list-part-left image{
  width: 100%;
  height: 100%;

}
.doctor-name{
  font-size: 18px;
}
.list-part-right{
  float: left;
  width: 65%;
}
.list-part-right view{
  width: 100%;
}
.list-part-bottom label{
  width: 100%;
  display: block;
  font-size: 14px;
  color: #989898;
  margin: 8px 0;
}
.list-part-bottom text{
  width: 100%;
  display: block;
  font-size: 12px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
  color: #989898;
}
.haveNumber{
  padding:3px 10px;
  font-size:14px;
  color: #fff;
  margin-right: 10px;
  float: right;
  border-radius: 20px;
  background: #1498d9; 
}
.price{
  padding:3px 10px;
  color: #fff;
  float: right;
  border-radius: 20px;
  font-size:14px;
  background: #ffa14e; 
  margin-right: 0px;
}
.show{
  display: block;
}
.hidden{
  display: none;
}