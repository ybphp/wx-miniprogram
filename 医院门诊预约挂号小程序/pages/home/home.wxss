/* pages/home/home.wxss */
.topSearch{
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 1px 2px rgba(0,0,0,.1);
}
.msgIcon{
  text-align: center;
}
.personInfo{
  padding: 10px;
}
.changePersonInfo{
  position: fixed;
  bottom: 0;
  padding: 10px;
}
.clearFloat{
  clear: both;
}
.personInfoTop>view:first-child{
  float: left;
  font-size: 16px;
}
.personInfoTop>view:nth-child(2){
  float: right;
  border: solid 1px #1498d9;
  border-radius: 20px;
  padding:2px 10px;
  color:#1498d9;
}
.seeCard{
  padding-bottom: 15px;
  border-bottom: solid 1px #e5e5e5;
  font-size: 12px;
  color: #858585;
}
.personInfoBottom>view{
  
  float:left;
  text-align: center;
  padding: 10px 0;
}
.personInfoBottom>view:first-child{
  width: 33%;
}
.personInfoBottom>view:nth-child(2){
  width: 40%;
}
.personInfoBottom>view:nth-child(3){
  width: 26%;
}

.personInfoBottom>view:nth-child(2){
  border-left: solid 1px #e5e5e5;
  border-right: solid 1px #e5e5e5;
}
#show{
  display: block;
}
#hidden{
  display: none;
}
.erweima{
  width: 107px;
  height: 107px;
}
.erweimaWrapper{
  height: 400px;
}
.erweimaWrapper .i-modal-body{
  max-height:180px;
}