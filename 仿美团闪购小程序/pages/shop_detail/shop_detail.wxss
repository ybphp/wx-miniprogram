/* pages/shop_detail/shop_detail.wxss */
.shop_header{
    display: flex;
    justify-content : space-between;
    background: #48c001;
    padding:20rpx 20rpx;
    color:#fff;
    box-sizing: border-box;
    position: fixed;
    top:0;
    left:0;
    width:100%;
    z-index: 1;
}
.shop_header .show_img{
    width:120rpx;
    height:73rpx;
}
.shop_header .show_img image{
    width:100%;
    height:100%;
}
.shop_header .shop_info{
    flex:1;
    margin-left:34rpx;
}
.shop_header .shop_info text{
    display: block;
    font-size:24rpx;
    line-height:40rpx;
}
.shop_time{
    display:flex;
}
.shop_time image{
    width:26rpx;
    height:26rpx;
    margin:6rpx 10rpx 0 0;
}
.shop_header .shop_info .shop-notice{
    color:rgb(231, 231, 231);
}


.shop-box{
    padding-top:160rpx;
    display: flex;
    justify-content: space-between;
    height:100vh;
    box-sizing: border-box;
}

.shop-box .shop-nav{
    width:200rpx;
    font-size:26rpx;
    height:100%;
    background: #eee;
    box-sizing: border-box;
}
.shop-box .shop-nav view{
    padding:20rpx;
}
.shop-box .shop-nav .self{
    background: #fff;
}

.shop-items-scroll{
    margin-left:20rpx;
}
.shop-item{
    display: flex;
    margin-top:30rpx;
}
.shop-item image{
    width:150rpx;
    height:129rpx;
}
.shop-item .shop-item-text{
    margin-left:10rpx;
    flex: 1;
    display: flex;
    flex-direction:column;
    justify-content: space-between;
}
.shop-item .shop-item-text text{
    display: block;
    font-size:24rpx;
}

.shop-item .shop-item-text .name{
    font-size:32rpx;
}
.shop-item .shop-item-text .price{
    font-size:26rpx;
    color:#a95108;
}