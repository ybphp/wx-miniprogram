  <movable-view style="width:100%;height:700rpx;"scale="true" direction="all" scale-min="1.0" scale-max="2.5">
      <image style='width:100%' mode="widthFix" src='seat.jpg'></image>
  </movable-view>
  </movable-area>

  </view>
