.center {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction:column;
}
/*
    头部
  */
.title,.footer-box{
    position: fixed;
     left: 0;
     z-index: 9;
  }
.title {
    display: flex;
     justify-content:space-between;
     align-items: center;
     border-top: 1px solid #eee;
     background: #f8f8f8;
     top: 0;
    width: 100%;
}

.title view {
    align-items: center;
     height: 80rpx;
    flex: 1;
    display: flex;
    justify-content:center;
    font-size: 30rpx;
    color: #6d6d6d;
    border-bottom: 1px solid #eee;
}
.title view.set{
     border-bottom-color: #d92a2a;
     color: #d92a2a;
}
.title  .last.set {
    color: #d92a2a;
    border:none;
}
/*
    尾部
  */
.footer-box {
    display: flex;
    justify-content:center;
    background: #f7f7f8;
    border-top: 1px solid #eee;
    align-items:center ;
    color: #d92a2a;
    font-size: 32rpx;
    bottom: 0;
    width: 100%;
}
.footer-box  view{
    display: flex;
    width: 100%;
    align-items:center ;
    justify-content:center;
    height: 100rpx;
}
.footer-box  view:first-child{
    border-right: 1px solid #eee;
}
/*
    弹层
  */
  .dolayer{
      position: fixed;
      top: 82rpx;
      left: 0;
      height: 80rpx;
      width: 100%;
      background: #f8f8f8;
      display: flex;
  }
.dolayer text{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    border-left: 1px solid #eee;
 }
 .dolayer text.set {
     color: #d92a2a;
 }
 .dolayer text:first-child{
     border:none;
 }
/*
    滚动部分
  */
.scroll-box {
    flex: 1;
}
.scroll-box-pasd {
  flex: 1;
  padding: 100rpx 0; 
}
.scroll-box view{
    color: #fff;
    font-size: 50rpx;
}
.view-box {
    padding: 15rpx 30rpx;
}
.view-box  .box-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
 .box-title .title-left {
    display: flex;
    align-items: center;
 }
  .box-title  .title-rit {
      font-size: 26rpx;
      color: #a9a9a9;
  }
 .box-title .logo{
     height: 80rpx;
     width: 80rpx;
     border-radius: 100%;
 }
  .box-title .text {
      font-size: 32rpx;
      color: #333;
      padding: 0 10rpx;
  }
 .box-title .bor-txt {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 35rpx;
    width: 80rpx;
    border:1px solid #dc3a3a;
    border-radius: 35rpx;
    font-size: 20rpx;
    color: #dc3a3a;
    margin-left: 15rpx;
}
.box-title .ico{
    height: 48rpx;
    width: 48rpx;
} 
.box-test {
    padding: 15rpx 0 ;
}
.box-test text{
    font-size: 32rpx;
    color: #333;
    margin: 0;
    padding: 0;
    display: block;
    line-height: 50rpx;
    word-wrap:break-word;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    max-width: 80%;
}
.box-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.box-footer  text {
    font-size: 22rpx;
    color: #a9a9a9;
}
.box-footer .news {
     display: flex;
    align-items: center;
}
.box-footer  image {
    height: 36rpx;
    width: 36rpx;
    margin-right: 10rpx;
}
.round-click{
    height: 120rpx;
    width: 120rpx;
    background-color: #d92a2a;
    border-radius: 100%;
    position: fixed;
    bottom: 150rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click navigator{
    font-size: 32rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
}