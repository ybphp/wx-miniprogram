.details-title {
        padding: 0 30rpx;
        border-bottom: 15rpx solid #f0f1f3;
}
.title-user{
        display: flex;
         align-items:center;
}
.title-user .logo {
        height: 80rpx;
        width: 80rpx;
}
.title-user text {
        font-size: 30rpx;
        color: #333;
        padding: 0 15rpx;
}
.title-user .ico {
        height: 48rpx;
        width: 48rpx;
}
.title-content {
        font-size: 36rpx;
        color: #333;
        padding: 30rpx 0;
}
.title-label {
        display: flex;
         align-items:center;
}
.title-label text {
        font-size: 22rpx;
        color: #a9a9a9;
        border:1px solid  #e8e8e8;
        padding: 5rpx  8rpx;
        border-radius: 15rpx;
        margin-right: 15rpx;
}
.title-time {
         display: flex;
         justify-content: space-between;
         align-items:center;     
         padding:30rpx 0;
}
.title-time text{
        font-size: 26rpx;
       color: #a9a9a9;
}
.reply-list  {
        padding: 0 30rpx;
}
.reply-list .title{
    font-size: 40rpx;
    margin: 30rpx 0;
    color: #333;
    display: block;
}
.list-details {
    padding-bottom: 100rpx;
}
.list-details .list-details-title{
        display:flex;
        justify-content: space-between;
}
.list-details .details-cen{
        display:flex;
        flex: 1;
        align-items: center;
        justify-content: space-between;
}
.list-details .details-cen:last-child{
        justify-content:  flex-end;
}
.list-details-title .details-logo{
        height: 80rpx;
        width: 80rpx;
}
.list-details-title .details-name{
        font-size:30rpx;
        color: #333;
        padding-left: 15rpx;
}
.list-details-title .details-adopt{
        font-size:30rpx;
        color: #d92a2a;
        padding-left: 15rpx;
}
.list-details-title .red-text {
        display: flex;
        align-items: center;
        padding-right: 30rpx;
}
.list-details-title .red-text image{
        height: 36rpx;
        width: 36rpx;
}
.list-details-title .red-text text{
        font-size: 22rpx;
        color: #a9a9a9;
        padding-left: 10rpx;
}
.list-details-title .consultation{
        font-size: 22rpx;
        border:1px solid #dc3a3a;
        color: #dc3a3a;
        padding: 5rpx 8rpx;
        border-radius: 15rpx;
}
.list-details-content {
        padding-left: 80rpx;
}
.content-text{
        padding:30rpx 0;
}
.content-text text{
        font-size: 30rpx;
        color: #333;
        display: block;
}

.content-text text:last-child{
        font-size: 22rpx;
        color: #a9a9a9;
        padding-top: 10rpx;
}
.content-reply{
        background-color: #f8f9fb;
        padding: 0 15rpx 15rpx 15rpx;
}
.content-reply .reply-list {
        padding: 0;
        padding-top: 15rpx;
          font-size: 30rpx;
        color:#333;
}
.content-reply .blue-txt {
        color:#1679f3;
        font-size: 30rpx;
}
.content-text text.reply{
    color: blue;
    font-size: 32rpx;
}
.replytext {
    position: fixed;
    display: flex;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 80rpx;
    border:1px solid #ccc;
     align-items: center;
    justify-content: center;
    z-index: 9;
    background: #e8e8e8;
}
.replytext text{
    font-size: 32rpx;
    color: #333;
}
.title-user text.money {
    color: #d92a2a;
}
.title-images  {
    width: 100%;
    height: auto;
}
.title-images image{
    width: 100%;
    height: 180rpx;
}
.round-click{
    height: 120rpx;
    width: 120rpx;
    background-color: #d92a2a;
    border-radius: 100%;
    position: fixed;
    bottom: 150rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click navigator {
    font-size: 32rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
}
.details-1 {
    display: flex;
    align-items: center;
}
.details-2 {
    display: flex;
     align-items: center;
}
.details-2 text {
    font-size: 30rpx;
    color: #333;
}
.details-2 text.color {
    color: #d92a2a;
    margin-right: 30rpx;
}
.details-2 text:first-child {
    margin-right: 30rpx;
}
.redbox {
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #333;
}
.redbox image {
    height: 35rpx;
    width: 35rpx;
    margin-right: 10rpx;
}