.status {
  width: 100%;
  height: 80rpx;
  color: gray;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 20rpx;
  border-bottom: 5px solid gainsboro;
}
.num {
  color: lightgreen;
  margin-left: 10rpx;
  font-size: 30rpx;
}
.button {
  height: 100rpx;
  width: 100%;
  /* background-color: black; */
  color: white;
  bottom: 50rpx;
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.button button {
  width: 90%;
  background-color: black;
  color: white;
}

.cards {
   /* display: ;  */
  width: 90%;
  height: 100rpx;
   display: flex; 
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-align: center;
  border-bottom: 1px solid gainsboro;
  margin: auto auto;
  position: relative;
}
.card {
  width: 25%;
  height: 50%;
  border-right: 1px solid gainsboro;
}
.add {
  width: 25%;
  height: 100%;
  color: #2682D7;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.coupon {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  width: 90%;
  margin: auto auto;
  height: 80rpx;
  border-bottom: 1px solid gainsboro;
}
.coupon-type {
  color: gray;
}
.ticket {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  width: 90%;
  margin: auto auto;
  height: 80rpx;
  border-bottom: 1px solid gainsboro;
}
.ticket-type {
  color: gray;
}
.park {
  width: 90%;
  height: 200rpx;
  background-color: gainsboro;
  margin: auto auto;
  border: 1px solid gainsboro;
  border-radius: 5px;
  text-align: center;
  margin-top: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.cardinput {
  width: 90%;
  height: 100rpx;
  background-color: white;
  margin:auto auto;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.subpicker{
  width: 500rpx;
  height: 100rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cardinput input {
  width: 70%;
  height: 90%;
  /* border: 10rpx solid lightgray; */
  border-bottom: 1px solid gray;
  font-size: 30rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  text-align: center;
  /* border-radius: 5px; */
}
.cardinputcancel  {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 30rpx;
  /* border: 1px solid lightblue; */
  border-right: 1px solid gray;
  border-left: 1px solid gray;
  color: red;
  height: 50%;
  width: 15%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cardinputconfirm {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 30rpx;
  /* border: 1px solid lightblue; */
  color: green;
  height: 70%;
  width: 15%;
  display: flex;
  align-items: center;
  justify-content: center;
}