.tab {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /* border-bottom:1px solid black; */
}
.tab-one {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-two {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.button {
  position: absolute;
  background-color: black;
  border-radius: 5px;
  margin: auto auto;
  margin-top: 10rpx;
  left: 0;right: 0;
  width: 95%;
  height: 100rpx;
  margin-bottom: 10rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}
.list {
  width: 95%;
  height: 150rpx;
  /* background-color: lightblue; */
  border: 1px solid black;
  border-radius: 5px;
  margin: auto auto;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.group-image {
  height: 150rpx;
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.group-image image {
  height: 150rpx;
  width: 150rpx;
  /* background-color: lightgreen; */
  border-radius: 5px;
}
.group-desc {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* background-color: antiquewhite; */
  margin-left: 20rpx;
  font-size: 20rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.group-status {
  height: 100%;
  width: 30rpx;
  font-size: 20rpx;
  writing-mode: tb-rl;
  text-align: center;
  background-color: gray;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.group-name {
  width: 80%;
  height: 50%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  /* background-color: lightseagreen; */
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 40rpx;
  color: black;
}
.group-time {
  width: 80%;
  height: 50%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  /* background-color: lightslategrey; */
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 20rpx;
  color: gray;
}
/* @import "../common/wxSearch/wxSearch.wxss"; */
.searchbar {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 10vh;
  /* background-color: yellow; */
  /* margin-top: 10rpx; */
}
.searchinput {
  height: 70%;
  display: flex;
  flex-direction: row;
  background-color: #C0C0C0;
  border: 13rpx solid white;
  border-radius: 5px;
  justify-content: flex-start;
  align-items: center;
}
.searchbutton {
  height: 100%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}