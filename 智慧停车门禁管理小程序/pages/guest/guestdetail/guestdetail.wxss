.form {
  width: 100%;
  height: 80vh;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;

}
.form-items {
  width: 90%;
  margin: auto auto;
}
.form-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  border-bottom: 1px solid gainsboro;
  line-height: 90rpx;
}
.submit {
  width: 90%;
  height: 10vh;
  margin: auto auto;
}
.submit button {
  color: white;
  background-color: black;
}
.link{
  text-align: center;
  height: 8vh;
}
.link text{
  color: #005CB1;
  font-size: 14px;
  text-align: center;
 
  border-bottom: 1px solid #005CB1;
}
picker {
  flex: 1;
  margin-left: 50rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 14px;
  color: gray;
}
input {
  flex: 1;
  margin-left: 50rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 14px;
  color: gray;
}
label {
  width: 150rpx;
  text-align: end;
}
