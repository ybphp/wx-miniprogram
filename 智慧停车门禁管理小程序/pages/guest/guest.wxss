page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.button {
  width: 60%;
  height: 150rpx;
  border: 1px gray solid;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 100rpx;
  border-radius: 5px;
}

.button text {
  margin-left: 50rpx;
  font-size: 20px;
}