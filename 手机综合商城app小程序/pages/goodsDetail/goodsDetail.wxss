/* pages/goodsDetail/goodsDetail.wxss */
@import '/assets/css/weui.wxss';
/* swiper */
swiper{
  width:100%;
  height:750rpx;
}
swiper-item{
  width:100%;
  height:100%;
}
swiper-item image{
  height:100%;
  width:100%
}
.wx-swiper-dot{
    height: 12rpx !important;
    width: 12rpx !important;
}
.wx-swiper-dot-active{
    width:44rpx !important; 
    height:12rpx !important;
    border-radius: 6rpx !important;
