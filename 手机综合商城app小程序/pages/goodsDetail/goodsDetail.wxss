/* 商品详情 */
.details{
  height:230rpx;
  background-color: #fff;
  margin-bottom: 12rpx;
}
.details .detailsTop,.details .detailsMid,.details .detailsBottom{
  display: flex;
  justify-items: center;
}
.details .detailsMid{
  padding-left:24rpx;
}
.details .detailsTop,.details .detailsBottom{
 padding:14rpx 24rpx;
}
.details .detailsTop .price{
  flex:1
}
.details .detailsTop .price text:nth-child(1){
   font-size:36rpx;
   color:#F44225;
   font-weight:500
}
.details .detailsTop .price text:nth-child(2){
  font-size: 24rpx;
  color:#C5C5C5;
  text-decoration:line-through;
}
.details .detailsTop .num{
  flex:1;
  text-align: right;
  font-size: 22rpx;
  color:#C5C5C5;
}
.details image{
  width:22rpx;
  height:24rpx;
  margin:0 20rpx;
}
.details .share{
  width:120rpx;
  height:56rpx;
  margin-left:30rpx;
  display: flex;
  justify-items: center;
  align-items: center;
  background-color: #EFEFF4;
  font-size: 22rpx;
  color:#7B7B7B;
  border-bottom-left-radius: 28rpx;
  border-top-left-radius: 28rpx;
}
.details .detailsMid view:nth-child(1){
  color:#282828;
  font-size: 26rpx;
  flex: 1;
  word-break: break-all;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.details .detailsBottom{
  font-size: 22rpx;
  color:#C5C5C5;
}

/* 选择规格 */
.choose{
  background-color: #fff;
  margin-bottom:24rpx;
  font-size: 24rpx;
  padding:0 24rpx;
}
.choose .chooseView{
  height:90rpx;
  border-bottom:2rpx solid #EFEFF4;
  display: flex;
  align-items: center;
}
.choose .chooseView>text,.chooseViewL .text{
  margin-right:36rpx;
}
.choose .chooseView button{
  width:98rpx;
  height:42rpx;
  line-height:42rpx;
  margin:0 24rpx 0 0;
  padding: 0;
  font-size: 24rpx;
  text-align: center;
  border-radius: 12rpx
}
.choose .chooseView button.btn1{
  background-color: #F44225;
  color:#fff;
}
/* .choose .chooseView button.btn1::after{
  border:none;
} */
.choose .chooseView button.btn2{
  background-color: #fff;
  color:#282828;
}
.chooseView:nth-child(3) .chooseViewL{
  display: flex;
  align-items: center
}
.chooseViewL,.chooseViewLR{
 flex:1;
 text-align: right;
 margin-right: 0 !important;
}

/* 加减 */
/*主容器*/
.stepper {
	width:136rpx;
	height:42rpx;
	/*给主容器设一个边框*/
	border: 2rpx solid #c5c5c5;
	border-radius: 18rpx;
}
 
/*加号和减号*/
.stepper text {
	width:40rpx;
	line-height: 42rpx;
	text-align: center;
	float: left;
}
 
/*数值*/
.stepper input {
	width:50rpx;
	height: 42rpx !important;
  min-height: 42rpx !important;
	float: left;
	margin: 0 auto;
	text-align: center;
	font-size: 24rpx;
	/*给中间的input设置左右边框即可*/
	border-left: 2rpx solid #c5c5c5;
	border-right: 2rpx solid #c5c5c5;
}
 
/*普通样式*/
.stepper .normal{
	color: black;
}
 
/*禁用样式*/
.stepper .disabled{
	color: #c5c5c5;
}

