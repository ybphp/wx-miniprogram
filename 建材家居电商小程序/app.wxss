/* pages/submit_from_deposit/submit_from_deposit.wxss */
/* pages/submit/submit.wxss */


page {
  background-color: #f8f8f8;
}


.shop-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.shop-title image:nth-child(1) {
  width: 50rpx;
  height: 60rpx;
  padding: 0 20rpx;
}

.shop-title image:last-child {
  width: 18rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.shop-title .shop-info {
  margin: 20rpx;
  margin-right: 30rpx;
}

.shop-title .shop-info .shop-info-top {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.shop-title .shop-info .shop-info-top .top-name {
  font-size: 34rpx;
  padding-bottom: 10rpx;
}

.shop-title .shop-info .shop-info-top .top-phone {
  font-size: 28rpx;
}

.buy {
  background-color: #fff;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.buy .buy-title {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.buy .buy-title image {
  width: 46rpx;
  height: 42rpx;
  
}

.buy .buy-title text {
  margin-left: 10rpx;
}

.buy-list {
  display: flex;
  padding: 20rpx 0;
  align-items: center;
}

.buy-list text {
   width: 28%; 
}

.buy-list input {
  width: 72%;
  margin-left: 30rpx;
}

.buy-list .deposit {
  margin-left: 30rpx;
  color: #f30;
}


.buy-list .goods-pic image {
  width: 180rpx;
  height: 180rpx;  
}

.buy-list .goods {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 30rpx; 
  width: 400rpx; 
  height: 180rpx;
}

.buy-list .goods .top-goods {
  display: flex;
  flex-direction: column;
}

.buy-list .goods .top-goods .goods-name {
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.buy-list .goods .top-goods .format {
  font-size: 26rpx;
  color: #666;
}

.buy-list .goods .goods-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.buy-list .goods .goods-price .price {
  color: #ff4318;
  font-size: 28rpx;
}

.buy-list .goods .goods-price .number {
  color: #666;
  font-size: 28rpx;
}

.submit-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center;
}

.submit-btn .left-submit {
  width: 70%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  background-color: #fff;
}

.submit-btn .left-submit text {
  color: #ff4318;
  font-size: 34rpx;
  margin-right: 20rpx;
}

.submit-btn .right-submit {
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #ff4318;
  color: #fff;
}
.submit-btn .s-submit {
    width: 100%;
}