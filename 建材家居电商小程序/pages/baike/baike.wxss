/* pages/baike/baike.wxss */

page {
  background-color: #fff;
}

.article-wrap {
  width: 94%;
  margin: 0 auto;
}
.article-title {
  padding-top: 30rpx;
  text-align: left;
  font-size: 40rpx;
  margin-left: 20rpx;
  line-height: 56rpx;
}

.article-subTitle {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.article-subTitle image{
  width: 30rpx;
  height: 30rpx;
}

.article-subTitle text {
  font-size: 26rpx;
  margin-left: 4rpx;
}

.article-time {
  display: flex;
  margin: 20rpx 0;
  font-size: 24rpx;
  color: #666;
  margin-right: 30rpx;
}

.article-cont {
  padding: 10rpx; 
}

.article-cont image {
  width: 100%;
  height: 600rpx;
  margin-bottom: 4rpx;
}

.article-cont text {
  display: inline-block;
  line-height: 46rpx;
  color: #666;
  padding-top: 20rpx;
}