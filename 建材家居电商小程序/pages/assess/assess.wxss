/* pages/assess/assess.wxss */

@import '../store/store.wxss';

/* assess-nav */
.assess-nav {
  display: flex;
  flex-wrap: wrap;
  width: 96%;
  padding-top: 30rpx; 
  padding-left: 20rpx;
  padding-bottom: 4rpx;
}

.assess-nav view {
  color: #fff;
  padding: 2rpx 20rpx;
  border: 1px solid #f8f8f8;
  background-color: #fba38b;
  border-radius: 30rpx;
  margin-left: 20rpx;
  text-align: center;
  margin-bottom: 12rpx;
}

.assess-nav .assess-total {
  background-color: #ff4412;
}

/* assess-list */

.evalution-pic {
  display: flex;
  flex-wrap: wrap;
  margin-left: 100rpx;
}

.evalution-pic image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}