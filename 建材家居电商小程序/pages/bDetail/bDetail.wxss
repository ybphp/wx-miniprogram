/* pages/bDetail/bDetail.wxss */

page {
  background-color: #f8f8f8;
}


.b-banner {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}

.b-banner swiper {
  height: 600rpx;
}

.b-banner image {
  width: 100%;
  height: 600rpx;
}

.b-banner .b-title {
  padding: 10rpx 20rpx;
}

.b-banner .b-price {
  padding-left: 20rpx;
  color: #ff4b1b;
}

.b-format {
  margin: 20rpx 0;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.b-format .input-buy {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 170rpx;
  margin-left: 20rpx;
  border: 1px solid #eee;
  text-align: center;
}
.b-format .input-buy text:first-child {
  width: 50%;
  border-right: 1px solid #eee;
  background-color: #f8f8f8;
  text-indent: 10rpx;
}
.b-format .input-buy .decrease {
  color: #ccc;
}

.b-format .input-buy text:last-child {
  width: 50%;
  border-left: 1px solid #eee;
  background-color: #f8f8f8;
}
.b-format .input-buy input {
  display: flex;
  justify-content: center;
  width: 100%;
}

.b-format .input-buy .input-place {
  text-align: center;
}
.b-format text {
  display: flex;
  padding: 10rpx;
}

.b-format image {
  width: 12rpx;
  height: 22rpx;
  margin-right: 20rpx;
}

.b-inner {
  background-color: #fff;
  padding-bottom: 100rpx;
}

.b-inner text {
  display: flex;
  justify-content: center;
  padding: 30rpx 20rpx;
  font-size: 32rpx;
  color: #666;
  line-height: 54rpx;
}

.b-inner image {
  width: 100%;
}

.b-bottom-option {
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
}

.b-bottom-option image {
  width: 38rpx;
  height: 36rpx;
}

.b-comment,.b-favorate {
  width: 18%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.b-comment {
  border-right: 1px solid #eee;
}
.b-cart,.b-enter {
  width: 41%;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
}

.b-cart {
  background-color: #fe9a24;
}

.b-enter {
  background-color: #ff6e1f;
}

.b-bottom-option .b-favorate .isCollect {
  color: #ff5917;
}