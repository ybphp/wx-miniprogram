/**index.wxss**/

/* 轮播图 */
.swiper {
  height: 400rpx;
}
.slide-image {
  width: 750rpx;
  height: 400rpx;
}

/* 导航区 */

.nav {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  width: 96%;
  margin: 0 auto;
  margin-top: 16rpx;
}

.conlumn {
  display: flex;
  flex-basis: 100%;
  height: 370rpx;
  justify-content: space-around;
  margin-top: 6rpx;
}

.conlumn .nav-pic {
  width: 350rpx;
  height: 370rpx;
  position: relative;
}

.conlumn .nav-pic .icon-wrap {
  position: absolute;
  left: 32%;
  top: 25%;
  text-align: center;
}

.conlumn .nav-pic .icon-wrap image {
  width: 98rpx;
  height: 104rpx;
}

.conlumn .nav-pic .icon-wrap view {
  font-size: 32rpx;
  color: #fff;
  margin-top: 18rpx;
}

.index-cont {
  margin-top: 30rpx;
}

.cont-title {
  text-align: center;
  margin-bottom: 20rpx;
}

.main-title {
  font-size: 34rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  color: #333;
}

.sub-head {
  font-size: 30rpx;
  color: #666;
}

.cont-photo {
  width: 96%;
  margin: 0 auto;
  text-align: center;
  margin-bottom: 50rpx;
}

.cont-photo image {
  width: 710rpx;
  height: 340rpx;
  border-radius: 10rpx;
}

.cont-photo .pedia-title {
  text-align: left;
  font-size: 30rpx;
  margin-left: 16rpx;
  margin-top: 20rpx;
  color: #333; 
}