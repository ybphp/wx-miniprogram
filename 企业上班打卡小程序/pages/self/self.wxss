page {
  background-color: #fafafa;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  /*background: firebrick;*/
  width: 100%;
}

.picker {
	font-size: 12.75pt;
	color: #000000;
}

.button {

  border-radius: 8rpx;
  font-size: 10.5pt;
  line-height: 55rpx;
  border: solid 1px rgba(0, 0, 0, 0.12);
  color: rgba(0, 0, 0, 1);
}

.hover-button {
  opacity: 0.7;
}

.list-item {
  background-color: #fff;
  padding: 30rpx 0rpx 0rpx 40rpx;
}

.time {
  font-size: 12.75pt;
  line-height: 24px;
  color: rgba(0, 0, 0, 0.87);
}

.place {
  border-bottom: 1px solid #e5e5e5;
  padding-top: 16rpx;
  padding-bottom: 30rpx; 
  line-height: 18px;
  font-size: 9.75pt;
  color: rgba(0, 0, 0, 0.54);
}

.no-record {
  display: flex;
  flex-direction: column;
}
.no-record image
{
  width: 150rpx;
  height: 180rpx;
  margin: 200rpx auto 0rpx auto;
}
.no-record text
{
  margin-top: 77rpx;
	height: 48rpx;
	font-size: 34rpx;
	letter-spacing: -0.8rpx;
	text-align: center;
	color: rgba(0, 0, 0, 0.38);
}