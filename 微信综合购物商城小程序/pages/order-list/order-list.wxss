.top-header {
  border-bottom: 0;
}
.container {
  width: 100%;
  background-color: #f5f5f5;
	overflow: hidden;
}


.status-box {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

.status-box .status-label {
  width: 150rpx;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  box-sizing: border-box;
  position: relative;
}

.status-box .status-label.active {
  color: #b5272d;
  border-bottom: 6rpx solid #b5272d;
}

.status-box .status-label .red-dot {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  left: 125rpx;
  top: 20rpx;
  background-color: #b5272d;
  border-radius: 50%;
}

.no-order {
  width: 100%;
	height: 100%;
  text-align: center;
  background-color: #f2f2f2;
	box-sizing: border-box;
	padding-top: 88rpx;
}

.no-order-img {
  width: 220rpx;
  height: 220rpx;
  margin-bottom: -10rpx;
  margin-top: 30%;
}

.no-order .text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.order-list {
  width: 100%;
}

.order-list .a-order {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}

.order-list .a-order .order-date {
  padding: 0 30rpx;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #000;
  align-items: center;
}

.order-list .a-order .order-date .red {
  font-size: 26rpx;
  color: #b5272d;
}

.a-order  .goods-info, .goods-img-container {
  width: 100%;
  border-top: 1rpx solid #f5f5f5;
  padding: 16rpx 0 16rpx 0;
  display: flex;
  align-items: center;
  color: #333;
}

.goods-info .img-box {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 30rpx;
  background-color: #f7f7f7;
}

.goods-info .img-box .goods-img, .goods-img-container .img-box .goods-img {
  width: 120rpx;
  height: 120rpx;
}

.goods-info  .goods-des {
  width: 95%;
  line-height: 39rpx;
  font-size: 26rpx;
  color: #000;
  overflow: hidden;
  margin-left: 30rpx;
}

.goods-img-container {
  height: 180rpx;
  box-sizing: border-box;
  white-space: nowrap;
  border-bottom: 1px solid #f5f5f5;
  padding-left: 30rpx;
}

.goods-img-container .img-box {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background-color: #f7f7f7;
  display: inline-block;
}

.order-list .a-order .price-box {
  position: relative;
  width: 720rpx;
  height: 100rpx;
  margin-left: 30rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
}
.order-list .a-order .price-box .btn-box{
	display: flex;
	justify-content: flex-end;
}
.order-list .a-order .price-box .total-price {
  font-size: 26rpx;
  color: #b5272d;
}

.a-order .price-box .btn {
  width: 166rpx;
  height: 60rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 60rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.a-order .price-box .cancel-btn {
  border: 1rpx solid #ccc;
  position: absolute;
  right: 216rpx;
  top: 20rpx;
  color: #999;
}

.a-order .price-box .topay-btn {
  border: 1px solid #b5272d;
  color: #b5272d;
}
.confirm-btn {
  background: #fff;
  border: 1px solid #b5272d;
	float: right;
}
.toeva-btn{
	background: #fff;
	border: 1px solid #b5272d;
	float: right;
}