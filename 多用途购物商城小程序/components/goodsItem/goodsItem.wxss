/* components/goodsItem/goodsItem.wxss */
.goods {
  margin: 0 auto 30rpx;
  padding: 0 30rpx;
  width: 336rpx;
  border: 1px solid rgb(237, 237, 237);
  background: rgba(0, 0, 0, 0.03);
  box-sizing: border-box;
  text-align: left;
}
.goods-img {
  margin: 30rpx 0;
  width: 276rpx;
  height: 276rpx;
}
.goods-brand {
  padding: 6rpx 12rpx;
  font-size: 24rpx;
  color: #fff;
  display: inline;
  line-height: 30rpx;
}
.brand-img {
  margin: 0 12rpx 4rpx 0;
  width: 40rpx;
  height: 28rpx;
  vertical-align: middle;
  display: inline-block;
}
.goods-intro {
  margin-top: 16rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 30rpx;
  color: rgb(62, 62, 62);
}
.goods-discount {
  padding: 10rpx 0;
  width: 100%;
  height: 28rpx;
}
.goods-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4rpx;
}
.goods-price {
  font-size: 35rpx;
  color: rgb(255, 0, 54);
  font-weight: bold;
}
.goods-simi {
  padding: 6rpx;
  font-size: 24rpx;
  background: rgb(255, 230, 235);
  color: rgb(255, 0, 54);
  border-radius: 20rpx;
}