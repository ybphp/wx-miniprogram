.select-box {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 1;
    width: 100vw;
    box-sizing:border-box;
    background: #fff;
    transition: all .2s;
    -webkit-transition: all .2s;
    transform: translateY(100%);
    -webkit-transform: translateY(100%);
}
.select-box.animated {
    transform: translateY(0)!important;
    -webkit-transform: translateY(0)!important;
    z-index: 99;
}

.box-header {
    display: flex;
    display: -webkit-flex;
    position: relative;
    margin-bottom: 10rpx;
    padding: 20rpx 30rpx;
    font-size: 26rpx;
}
.btn-close {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 24rpx;
    color: #b6b6b6;
    text-align: center;
    border-radius: 50%;
    border: 1px solid #b6b6b6;
}
.img-wrap {
    position:absolute;
    top:-25px;
    left:1;
}
.img {
    width: 200rpx;
    height: 200rpx;
    border: 4rpx solid #fff;
    box-sizing: border-box;
}

.commodity-price {
    padding-left: 220rpx;
    font-size: 28rpx;
    overflow: hidden;
}
.price {
    color: #FF0036;
}
.box-body {
    padding: 20rpx 30rpx;
    font-size: 26rpx;
}
.section-item {
    padding: 10rpx 0;
    border-bottom: 2rpx solid #eee;
}
.title {
    padding: 10rpx 0;
}
.cate-item {
    display: inline-block;
    margin: 0 16rpx 16rpx 0; 
    padding: 6rpx 22rpx;
    border-radius: 16rpx;
    border: 1px solid #f5f5f5;
    color: #555;
    background-color: #f5f5f5;
}
.cate-item.disabled {
    color: #cfcfcf;
}
.cate-item.selected {
    border-color: #FF0036;
    color: #FF0036;
    background-color: #FFF5F7;
}

.purchase-count,
.btn-group {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    align-items: center;
}
.purchase-title {
    color: #666;
    font-size: 26rpx;
}
.btn {
    margin-right: 6rpx;
    padding: 16rpx;
    font-size: 30rpx;
    font-weight: 700;
    background: #f5f5f5;
}
.btn.count {
    padding: 18rpx 16rpx;
    font-size: 26rpx;
    font-weight: 600;
}
.btn.disabled {
    color: #ccc;
}

.box-footer {
    display: flex;
    display: -webkit-flex;
    justify-content: space-around;
    align-items: center;
}
.footer-item {
    flex: 1 0 0;
    padding: 26rpx 0;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
}
.btn-takeIn {
    background: #FF9500;
}
.btn-purchase {
    background: #FF0036;
}
.btn-confirm {
    background: #FF0036;
}