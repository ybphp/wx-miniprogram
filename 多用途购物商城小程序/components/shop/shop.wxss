.media {
    display: flex;
    display: -webkit-flex;
    padding: 10rpx 0;
}
.media-left {
    width: 120rpx;
    text-align: center;
}
.media-right {
    margin-left: 10rpx;
}
.shop-image {
    width: 108rpx;
    height: 108rpx;
}
.shop-name {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #333;
    font-size: 32rpx;
}
.shop-cate {
    display: flex;
    display: -webkit-flex;
    justify-content: flex-start;
    margin-top: 10rpx;
}
.cate {
    margin-right: 4rpx;
    height: 28rpx;
    width: 170rpx;
}
.shop-grade {
    display: flex;
    display: -webkit-flex;
    justify-content: space-around;
}
.grade-item {
    font-size: 24rpx;
    color: #999;
}

.grade {
    display: inline-block;
    width: 80rpx;
    background-position: 40rpx 5rpx;
    background-size: 24rpx 24rpx;
    background-repeat: no-repeat;
}
.down {
    color: #00b78b;
    background-image: url('data:image/png;base64,');
}