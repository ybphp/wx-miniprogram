}
.title {
  font-size: 26rpx;
}
.subTitle {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #aaa;
}
.btn-custom {
  margin-top: 20rpx;
  width: 218rpx;
  background-color: transparent;
  border: 1px solid #666;
  font-size: 24rpx;
}