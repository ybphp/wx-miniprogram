.noContent {
  margin: 150rpx 0;
  text-align: center;
}
.noContent-img {
  margin: 0 auto;
  width: 240rpx;
  height: 240rpx;
  line-height: 240rpx;
  background-color: #ccc;
  border-radius: 100%;
  text-align: center;
}
.img {
  width: 130rpx;
  height: 130rpx;
  vertical-align: middle;
}
