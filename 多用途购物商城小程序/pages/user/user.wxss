/* pages/user/user.wxss */
page {
  background-color: rgb(238, 238, 238);
}
#user {
  background-image: linear-gradient(to right, #FD9126, #FF5000);
  padding: 75rpx 0 60rpx 0;
}
.user-info {
  height: 155rpx;
  display: flex
}
.user-profile {
  flex: 1;
  display: flex;
}
.default-profile {
  margin: 16rpx 0 0 20rpx;
  width: 108rpx;
  height: 108rpx;
  background-size: contain;
  background-position: center;
  background-repeat: no-repeat;
  border-radius: 100%;
  border: 1rpx solid #fff;
}
.user-nickName {
  margin-top: 5rpx;
  display: flex;
  flex: 3;
  flex-direction: column;
  justify-content: flex-start;
}
.user-setName {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}
.user-dear {
  margin-top: 16rpx;
  width: 100%;
  height: 48rpx;
  background-position: left;
  background-size: contain;
  background-repeat: no-repeat;
}
.user-setting {
  flex: 1.2;
  display: flex;
  justify-content: space-around;
}
.user-setting-icon {
  width: 44rpx;
  height: 44rpx;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
}
.user-meta {
  display: flex;
  justify-content: space-around;
  height: 90rpx;
  text-align: center;
}
.meta-item {
  display: flex;
  flex-direction: column;
  color: #fff;
  font-size: 26rpx;
}
.meta-count {
  flex: 1.4;
  font-size: 30rpx;
}
.meta-type {
  flex: 1;
}


.user-content {
  margin: 0 20rpx;
}
.card {
  background-color: #fff;
  border-radius: 26rpx;
  margin-bottom: 30rpx;
}
.card-title {
  padding: 22rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid rgb(238, 238, 238);
  font-size: 30rpx;
}
.left-title {
  font-weight: bold;
  color: #000;
}
.right-title {
  font-size: 26rpx;
  color: #ccc;
}
.card-body {
  padding: 20rpx;
}
.order,
.tools {
  display: flex;
  justify-content: center;
}
.order-item,
.tools-item {
  flex: 0 0 20%;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.order-bg,
.tools-bg {
  position: relative;
  margin: 0 auto;
  width: 65rpx;
  height: 65rpx;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
}
.order-count {
  position: absolute;
  top: -5rpx;
  right: -14rpx;
  z-index: 999;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  border: 1px solid rgb(255, 85, 0);
  border-radius: 100%;
  font-size: 24rpx;
  color: rgb(255, 85, 0);
  background-color: #fff;
}
.order-type,
.tools-type {
  font-size: 26rpx;
  color: #666;
}

.tools {
  flex-wrap: wrap;
}
.tools-item {
  flex: 0 0 25%;
  margin: 30rpx 0;
}