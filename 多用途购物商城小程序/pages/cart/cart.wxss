/* pages/cart/cart.wxss */
page {
  background-color: rgb(238, 238, 238);
}
#cart {
    margin-bottom: 130rpx;
    padding-top: 30rpx;
}
.box-header,
.shop {
    justify-content: space-between;
    align-items: center;
}
.commodity-box {
    background: #fff;
    margin-bottom: 30rpx;
    padding: 20rpx;
}
.checkbox {
    margin-top: 8rpx;
    padding-right: 20rpx;
}
.shop {
    flex: 1;
    justify-content: flex-start;
}
.shop-logo {
    margin: 15rpx;
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    background-repeat: no-repeat;
    background-size: cover;
}
.shop-name {
    padding-right: 20rpx;
}
.shop-logo.tianmao {
    background-image: url("data:image/png;base64,")
}
.shop-logo.chaoshi {
    background-image: url("data:image/png;base64,");
}
.shop-logo.qiye {
    background-image: url("http://gtms04.alicdn.com/tps/i4/TB1x4ExHVXXXXalXFXXSutbFXXX.jpg")
}

.box-body {
    flex-direction: column;
}
.item {
    position: relative;
    margin-bottom: 16rpx;
}
.commodity-item {
    position: relative;
    z-index: 99;
    justify-content: flex-start;
    align-items: center;
    transition: all 0.3s linear;
    -webkit-transition: all 0.3s linear;
    background-color: #fff;
}
.commodity-item.animated {
    transform: translateX(-100rpx);
    -webkit-transform: translateX(-100rpx);
}
.btn-remove {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 1;
    height: 100%;
    width: 100rpx;
    color: #fff;
    font-size: 26rpx;
    text-align: center;
    line-height: 1;
    background: #f60;
}
.btn-remove.show {
    z-index: 1;
}
.img {
    width: 195rpx;
    height: 195rpx;
}
.price {
    color: #f60;
}
.commodity-info {
    flex-direction: column;
    justify-content: space-between;
}
.commodity-params {
    margin-top: 10rpx;
    min-width: 2rpx;
    min-height: 40rpx;
    max-height: 80rpx;
    overflow: hidden;
    color: #999;
    background-color: #f5f5f5;
}
.commodity-price {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.btn {
    padding: 14rpx;
}

.btn-decrease,
.btn-increase {
    color: #878787;    
}

/* 结算 */
.accounts {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 99;
    width: 100vw;
    padding-left: 20rpx;
    align-items: center;
    background-color: #fff;
    /* box-shadow: 0 10rpx 10rpx #999; */
    border-top: 2rpx solid rgba(0, 0, 0, 0.1)
    
}
.checkAll {
    flex: 1;
    align-items: center;
}
.account {
    flex: 1.5;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.balance {
    padding: 30rpx 60rpx;
    background: #f50;
}
.decimal {
    font-size: 24rpx;
}