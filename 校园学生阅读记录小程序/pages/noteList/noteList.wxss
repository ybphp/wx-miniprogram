/* pages/noteList/noteList.wxss */
page{
    background:#f8f8f8;
}
.not-comment{
    margin-bottom:15rpx;
    background: #fff;
}
.has-comment{
    background: #fff;
}
.read-head .baby-avatar{
    flex:0 0 194rpx;
    height:266rpx;
    margin:0 26rpx 0 0;
    align-self: center;
    overflow: hidden;
  }
  .read-item{
      padding:30rpx 60rpx;
      border-bottom:1px solid #f8f8f8;
  }
  .read-head .baby-avatar image{
    width:100%;
    height:100%;
  }
  .read-status .read-title{
    max-width:454rpx;
      
  }
  .read-title  text{
    display: block;
  }
  .read-title .read-tit{
    color:#000;
    font-size:26rpx;
    font-weight: bold;
    margin:6rpx 0;
    
  }
  .not-comment .read-title .read-tit{
    max-width:454rpx;
  }
.has-comment .read-title .read-tit{
    max-width:300rpx;
}
  .read-title .read-class{
    color:#BBBBBB;
    font-size:22rpx;
    margin:6rpx 0;
    max-width:480rpx;
  }
  
  .read-title .write-btn{
      background: #81abed;
      border-radius: 20rpx;
      -webkit-border-radius:20rpx;
      color:#fff;
      font-size:20rpx;
      text-align: center;
      line-height: 44rpx;
      padding:5rpx 20rpx;
      display: inline-block;
      margin-right:15rpx;
  }
  .read-title .see-btn{
    border:1px solid #547df9;
    color:#547df9;
    border-radius: 20rpx;
    -webkit-border-radius:20rpx;
    font-size:20rpx;
    text-align: center;
    line-height: 44rpx;
    padding:5rpx 35rpx;
    display: inline-block;
    margin-right:15rpx;
  }
  
.read-title .read-note{
    color:#DCDCDC;
    font-size:18rpx;
    line-height: 30rpx;
}
.overflow-more{
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
}
