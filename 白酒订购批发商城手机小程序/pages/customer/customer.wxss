/*search-page search-bar*/
.search-page{
  position: fixed;
  width: 100%;
  overflow: hidden;
  background: rgba(255,255, 255, 1);
  top: 0;
  left: 0;
  resize: 0;
  z-index: 100;
}

.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-search-bar {
  z-index: 999;
}

/*mask*/
.mask{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(255,255, 255, 1);
  top:0;
  bottom:0;
  left: 0;
  right: 0;
  z-index: 98
}