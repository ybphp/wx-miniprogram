/* pages/signedFactory/factoryDetail.wxss */
.factory-info{
    padding: 30rpx;
    background-color: #ffffff;
}
.factory-info-hd{
    display: flex;
}
.factory-info-bd{
    display: flex;
    flex-direction: row;
     justify-content: space-between;
     margin: 32rpx 0 30rpx;

}
.factory-info-bd image{
    display: flex;
    height: 154rpx;
    width: 210rpx; 
}
.factory-info-ft{
    text-indent: 2em;
    text-align:justify;
}
.factory-foods{
    background-color: #ffffff;
    padding: 30rpx 20rpx 0;
}
.policy{
    background-color: #ffffff;
    padding: 30rpx;
}
.listinfo{
    display: flex;
    flex-direction: column;
    flex: 1;
    line-height: 1;
}

.listinfo .title{
    margin: 20rpx 0px;
}
.goodsList{
    padding: 20rpx 0;
    display: flex;
    flex-direction: row;
}
.listinfo-ft{
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}
.goodsList .listimg{
    width: 180rpx;
    height: 180rpx;
    margin-right: 20rpx;
}
.policy-text{
    text-indent: 2em;
    margin-top: 30rpx;
}
.policy-text1{
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    align-items: center;
    margin-top: 20rpx;
}
.policy-text1 .text{
    width: 180rpx;
    height: auto;

}
.policy-text1 .textinfo{
    display: flex;
    flex: 1;
}
.button-box{
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 99;
    display: flex;
    width: 100%;
    height: 110rpx;
    align-items: center;
    justify-content: center;
    background-color: #c24e4e;
}


