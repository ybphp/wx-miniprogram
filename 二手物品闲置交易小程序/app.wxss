.border-rb {
    border-right: 1px solid rgba(221, 221, 221, 0.3);
    border-bottom: 1px solid rgba(221, 221, 221, 0.3);
}

.border-r {
    border-right: 1px solid rgba(221, 221, 221, 0.3);
}

.border-b {
    border-bottom: 1px solid rgba(221, 221, 221, 0.3) !important;
}

.placeholder-icon {
    margin-right: 0.2rem;
}

.verify-code {
    margin-right: 0.5rem;
}

button::after {
    border: none;
}

.button-hover {
    background-color: #00ACFF;
    opacity: 0.7;
}

.positive-disabled-bg {
    color: #ffffff !important;
    background-color: #00ACFF !important;
    opacity: 0.5 !important;
}

.tool-tip {
    position: fixed;
    z-index: 10000;
    top: 15px;
    width: 100%;
    text-align: center;
    animation: tooltipmessage 3s;
    -moz-animation: tooltipmessage 3s; /* Firefox */
    -webkit-animation: tooltipmessage 3s; /* Safari 和 Chrome */
    animation-fill-mode: forwards;
    -webkit-animation-fill-mode: forwards;

}

.tool-tip-message {
    background-color: #ef473a;
    color: #ffffff;
    text-align: center;
    padding: 0.5rem 1.5rem;
    border-radius: 1.2rem;
    -webkit-box-shadow: 0px 1px 2px #ef473a;
    box-shadow: 0px 1px 2px #ef473a;
}

.tool-tip-message-success {
    background-color: #00ACFF;
    color: #ffffff;
    text-align: center;
    padding: 0.5rem 1.5rem;
    border-radius: 1.2rem;
    -webkit-box-shadow: 0px 1px 2px #00ACFF;
    box-shadow: 0px 1px 2px #00ACFF;
}

@-webkit-keyframes tooltipmessage {
    0% {
        -webkit-transform: translate(0, -1em);
        transform: translate(0, -1em);
    }
    10% {
        -webkit-transform: translate(0, 0em);
        transform: translate(0, 0em);
        opacity: 1;
    }
    90% {
        -webkit-transform: translate(0, 0em);
        transform: translate(0, 0em);
        opacity: 1;
    }
    100% {
        -webkit-transform: translate(0, -1em);
        transform: translate(0, -1em);
        opacity: 0;
    }
}

@keyframes tooltipmessage {
    0% {
        -webkit-transform: translate(0, -1em);
        transform: translate(0, -1em);
    }
    10% {
        -webkit-transform: translate(0, 0em);
        transform: translate(0, 0em);
        opacity: 1;
    }
    90% {
        -webkit-transform: translate(0, 0em);
        transform: translate(0, 0em);
        opacity: 1;
    }
    100% {
        -webkit-transform: translate(0, -1em);
        transform: translate(0, -1em);
        opacity: 0;
    }
}
