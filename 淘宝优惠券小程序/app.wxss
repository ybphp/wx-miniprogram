@import 'style/weui.wxss';

page{
  box-sizing:border-box;
  font-size:30rpx;
  color:#999;
}

.page_bd {
  padding-bottom: 0;
}

view{
  box-sizing:border-box;
}

/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.tab-scroll{
  display: flex;
  white-space: nowrap;
  height: 75rpx;
}
.tab-item{
  display: inline-block;
  width: 115rpx;
  height: 100%;
  font-size: 32rpx;
  line-height: 75rpx;
  text-align: center;
}
.tab-scroll .active{
  border-bottom: 5rpx solid #f48fb1;
  color: #f48fb1;
}



.pdct-list{
  padding-top: 1rpx;
  background: #f5f5f5;
}
.pdct-item{
  display: flex;
  height: 250rpx;
  margin: 10rpx 0;
  padding: 10rpx;
  overflow: hidden;
  background: #fff;
}
.pdct-item image{
  width: 30%;
  height: auto;
}
.pdct-mid {
  width: 50%;
  padding: 20rpx 8rpx;
  text-align: left;
}
.pdct-mid text:first-child{
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  overflow:hidden; 
  text-overflow:ellipsis;
}
.pdct-mid text:nth-child(2){
  display: block;
  float: left;
  margin-top: 20rpx;
  padding: 2rpx;
  border: 1rpx solid #f48fb1;
  border-radius: 5rpx;
  color: #f48fb1;
}
.pdct-mid text:nth-child(3){
  display: block;
  float: left;
  margin-top: 8rpx;
  margin-left: 20rpx;
  padding: 2rpx;
  font-size: 1.2rem;
  color: #f48fb1;
}
.pdct-mid text:nth-child(4){
  display: block;
  width: 100%;
  float: left;
  margin-top: 8rpx;
  padding: 2rpx;
  font-size: 0.7rem;
}

.pdct-right{
  width: 20%;
  border-left: 5rpx dashed #eee;
  text-align: center;
}


.pdct-right-top{
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  margin-top: -30rpx;
  border-radius: 50%;
  background: #f5f5f5;
}
.pdct-right text:nth-child(2){
  font-size: 1.4rem;
}
.pdct-right text:nth-child(3){
  display: block;
}
.pdct-right text:nth-child(4){
  display: block;
  font-size: 35rpx;
  line-height: 100rpx;
  color: #f48fb1;
}
