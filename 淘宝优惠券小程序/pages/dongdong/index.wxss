.top-img{
  width: 100%;
  height: 200rpx;
}
.dd-tab{
  display: flex;
  white-space: nowrap;
  width: 100%;
  height: 120rpx;
  background: #333;
}
.dd-tab view{
  display: inline-block;
  width: 200rpx;
  height: 1020rpx;
  padding: 10rpx 0;
  text-align: center;
  color: #fff;
}
.dd-tab view text:nth-child(1){
  display: block;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 40rpx;
}
.dd-tab view text:nth-child(2){
  display: block;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  color: #999;
}
.dd-tab .active{
  background: #f48fb1;
}
.dd-tab .active text:nth-child(2){
  color: #fff;
}
