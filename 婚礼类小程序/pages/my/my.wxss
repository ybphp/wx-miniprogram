.my_tib_k{
  width:100%;
  position: relative;
}

.my_tib_k>image{
  width: 100%;
}

.my_tib_k .tx{
  position: absolute;
  right: 0;left: 0;
  top: 80rpx;
  bottom: 0; 
  text-align: center;
}
.my_tib_k .tx image{
  width: 120rpx;
  height: 120rpx;
  border: solid 4rpx #fff;
  border-radius: 50%;
  box-shadow: 0 0 6rpx #8e5c08; 
  display: block;
  position: relative;
  left: 0;
  range: 0;
  top: 0;
  margin:auto;
}
.my_tib_k .tx text{
  color: #fff;
}

.my_daoh{
  overflow: hidden;
  height: 150rpx;

}
.my_daoh>view{
  width: 33.3%;
  float: left; 
  text-align: center;
}
.my_daoh>view>view{
  font-size: 40rpx;
  font-weight: bold;
  color: #454545;
}
.my_daoh>view text{
  color: #999
} 


.my_bt{
  background: #f5f5f5;
  height: 80rpx;
  line-height: 80rpx;
}
.my_bt text{
  padding: 0 20rpx;
  color: #999999;
}
