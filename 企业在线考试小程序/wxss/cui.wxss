}

/*圆角 */

.cui-fillet {
  border-radius: 45rpx;
}

.cui-white.cui-fillet::after {
  border-radius: 90rpx;
}

.cui-outline-fillet::after {
  border-radius: 90rpx;
}

/*渐变 */

.cui-btn-gradual {
  background: linear-gradient(-90deg, #5677fc, #5c8dff);
  border-radius: 45rpx;
  color: #fff;
}

.cui-gradual-hover {
  color: #d5d4d9 !important;
  background: linear-gradient(-90deg, #4a67d6, #4e77d9);
}

.btn-gradual-disabled {
  color: #fafbfc !important;
  border-radius: 45rpx;
  background: linear-gradient(-90deg, #cad8fb, #c9d3fb);
}

/*不同尺寸 */

