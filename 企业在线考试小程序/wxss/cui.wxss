/* button start*/

.cui-btn {
     width: 100%;
     position: relative;
     border: 0 !important;
     border-radius: 10rpx;
     display: inline-block;
     font-weight: 700;
     padding-top:0;
     padding-bottom: 0;
     height: 90rpx;
     line-height: 90rpx;
     text-align: center;
}

.cui-btn::after {
  content: "";
  position: absolute;
  width: 200%;
  height: 200%;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scale(0.5, 0.5);
  transform: scale(0.5, 0.5);
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  left: 0;
  top: 0;
  border-radius: 20rpx;
}

.cui-btn-block {
  font-size: 36rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.cui-white::after {
  border: 1px solid #eaeef1;
}

.cui-white-hover {
  background: #e5e5e5 !important;
  color: #2e2e2e !important;
}

.cui-dark-disabled {
  opacity: 0.6;
  color: #fafbfc !important;
}

.cui-outline-hover {
  opacity: 0.5;
}

.cui-primary-hover {
  background: #4a67d6 !important;
  color: #e5e5e5 !important;
}

.cui-primary-outline::after {
  border: 1px solid #5677fc !important;
}

.cui-primary-outline {
  color: #5677fc !important;
  background: none;
}

.cui-danger-hover {
  background: #d53912 !important;
  color: #e5e5e5 !important;
}

.cui-danger-outline {
  color: #ed3f14 !important;
  background: none;
}

.cui-danger-outline::after {
  border: 1px solid #ed3f14 !important;
}

.cui-warning-hover {
  background: #e56d00 !important;
