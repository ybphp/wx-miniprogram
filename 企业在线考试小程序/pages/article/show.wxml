<view class="container">
<view class="article-detail">
     <view class="article-title">{{info.title}}</view>
     <view class="article-info">
          <view class="data">
               <view class="item">{{info.category.title}}</view>
               <view class="item">{{info.updatetime_text}}</view>
               <view class="item">阅读 {{info.views}}</view>
          </view>
          <view class="share">
               
               <button class="cui-btn cui-btn-small" open-type="share"><text class="cui-icon cui-icon-share"></text></button>
          </view>
     </view>
     <view class="article-desc">
          {{info.desc}}
     </view>
     <view class="article-content">
          <rich-text nodes="{{info.content}}"></rich-text>
     </view>
</view>
</view>