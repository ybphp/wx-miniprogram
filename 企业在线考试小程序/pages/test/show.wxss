page{
     background-color: #efeff0;
}
.container{
     padding-bottom: calc(env(safe-area-inset-bottom) + 100rpx);
}
.test-detail{
     background-color: #ffffff;
     padding-bottom: 30rpx;
     margin-bottom: 30rpx;
}
.test-detail .image{
     width: 100%;
     height: 320rpx;
}
.test-detail .title{
     font-size: 36rpx;
     font-weight: 600;
     padding: 30rpx;
}
.test-detail .desc{
     padding: 30rpx;
     background-color: #f7f7f9;
     border-radius: 10rpx;
     font-size: 28rpx;
     color:#999999;
}
.section{
     background-color: #ffffff;
     margin-bottom: 30rpx;
}



.action-oper{
     display: flex;
     height: 100rpx;
     position: fixed;
     box-sizing: content-box;
     bottom: 0;
     left: 0;
     z-index: 99;
     width: 100%;
     background-color: #ffffff;
     padding-bottom: env(safe-area-inset-bottom);
}
.action-oper::before{
     content: '';
     position: absolute;
     top: 0px;
     right: 0;
     left: 0;
     border-top: 1rpx solid #eaeef1;
     -webkit-transform: scaleY(0.5);
     transform: scaleY(0.5);

}
.action-oper .action-oper__icon{
     width: 100rpx;
     height: 100rpx;
     text-align: center;
     background-color: #ffffff;
     display: flex;
     flex-flow: column;
     align-items: center;
     justify-content: center;
}
.action-oper .action-oper__icon .cui-icon{
     font-size: 38rpx;
}
.action-oper .action-oper__icon .label{
     font-size: 22rpx;
}
.action-oper .action-oper__icon:active{
     background-color: #f2f3f5;
}
.action-oper .action-oper__button{
     display: flex;
     flex-grow: 1;
     align-items: center;
     background-color: #ffffff;
     padding-left: 30rpx;
     padding-right: 30rpx;
}
.action-oper .action-oper__button .btn{
     height: 80rpx;
     line-height: 80rpx;
     flex-grow: 1;
     text-align: center;
     font-size: 28rpx;
}
.action-oper .action-oper__button .btn:first-child{
     border-top-left-radius: 40rpx;
     border-bottom-left-radius: 40rpx;
}
.action-oper .action-oper__button .btn:last-child{
     border-top-right-radius: 40rpx;
     border-bottom-right-radius: 40rpx;
}

.text-warning{
     color:#ff7900;
}


/*
 * 表格
 */

.table{
     border: 0px solid darkgray;
}
.tr {
     display: flex;
     width: 100%;
     justify-content: center;
     align-items: center;
}

.bg-w{
     background: snow;
}
.bg-g{
     background: #E6F3F9;
}
.th,.td{
     flex-grow: 1;
     flex-shrink: 0;
     justify-content: center;
     display: flex;
     padding: 10rpx 20rpx;
     align-items: center;
     font-size: 28rpx;
     border:1rpx solid #ffffff;
     overflow: hidden;
     white-space: nowrap;
     text-overflow: ellipsis;
}
.td{
     color:#80848f;
}
.th{
     background: #19be6b;
     color: #fff;
     font-weight: 600;
}
.w-50{
