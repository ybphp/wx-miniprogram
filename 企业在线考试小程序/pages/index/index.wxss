page{
     background-color: #efeff0;
}
.banner{
    width: 100%;
    height: 400rpx; 
    position: relative;
}
.banner image{
     width: 100%;
     height: 400rpx; 
}
.banner .text{
     width: 100%;
     height: 48px;
     position: absolute;
     z-index: 9999;
     color: #fff;
     bottom: 0;
     padding: 0 14px;
     padding-top: 12px;
     font-size: 16px;
     font-weight: 700;
     background: linear-gradient(180deg,rgba(0,0,0,0),rgba(0,0,0,.7));
     white-space: nowrap;
     overflow: hidden;
     text-overflow: ellipsis;
}
.banner .wx-swiper-dots{
     position: absolute;
     left: unset !important;
     right:0;
     bottom: 5px;
}
.banner .wx-swiper-dot{
     width:5px;
     height: 5px;
     border-radius: 0;
     background: white;
}
.banner .wx-swiper-dot.wx-swiper-dot-active {
    width: 10px;
    background: #19be6b;
}
.section{
     background-color: #ffffff;
     margin-bottom: 30rpx;
}
.subject-list {
     padding-left: 30rpx;
     padding-right: 30rpx;
     width: 100%;
     overflow: hidden;
     white-space: nowrap;
     padding-bottom: 30rpx;
}
.subject-list .subject-item{
     background-position: center;
     background-repeat: no-repeat;
     background-size: cover;
     width: 180rpx;
     height: 240rpx;
     padding: 30rpx;
     display: inline-block;
     color:#ffffff;
     margin-right: 30rpx;
     vertical-align: bottom;
     border-radius: 10rpx;
     position: relative;
}
.subject-list .subject-item:last-child{
     margin-right: 0;
}
.subject-list .subject-item .title{
     font-size: 24rpx;
     position: absolute;
     width: 100%;
     left: 0;
     bottom: 30rpx;
     padding: 0 30rpx;
     overflow: hidden;
     white-space: nowrap;
     text-overflow: ellipsis;
     text-shadow: 0 2px 2px rgba(0,0,0,.7);
}
