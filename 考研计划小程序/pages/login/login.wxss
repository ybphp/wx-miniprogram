page {
  background: white;
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  width: 100%;
  height: 100%;
}

#container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

#title {
  text-align: center;
  color: #04838e;
  font-size: 70rpx;
}

#logo_view {
  margin: 0 auto;
  margin-top: 20vw;
  margin-bottom: 20vw;
  width: 40vw;
  height: 40vw;
}

#logo {
  width: 40vw;
  height: 40vw;
}

#button_view {
  margin: 0 auto;
  width: 300rpx;
}

#button {
  background: #04838e;
  color: #fff;
}

button::after {
  border: none;
}
