/* 头像star */

.image-container {
  flex-direction: row;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx;
}

.head-image {
  margin: 0 auto;
  overflow: hidden;
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  margin-left: 200rpx;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  /*边框白色 border: 2px solid #fff;*/
}

.edit-image {
  width: 80rpx;
  height: 80rpx;
  margin-top: -100rpx;
  margin-left: 100rpx;
}

/* 头像end */

/* 信息star */

.text-container {
  flex-direction: column;
  display: flex;
  margin: 60rpx;
}

.text-container text {
  margin: 10rpx;
}

/* 信息end */

